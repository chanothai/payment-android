<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">
        <TextView
            android:id="@+id/topic_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_text_medium"
            android:textColor="@android:color/black"
            android:text="Smile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_emo_red"
                    android:layout_width="@dimen/size_image_choice"
                    android:layout_height="@dimen/size_image_choice"
                    android:scaleType="centerCrop"
                    android:src="@drawable/red" />

                <TextView
                    android:id="@+id/choice_bad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_text_small"
                    android:text="choice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_emo_yellow"
                    android:layout_width="@dimen/size_image_choice"
                    android:layout_height="@dimen/size_image_choice"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yellow" />

                <TextView
                    android:id="@+id/choice_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_small"
                    android:textColor="@android:color/black"
                    android:text="choice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_emo_green"
                    android:layout_width="@dimen/size_image_choice"
                    android:layout_height="@dimen/size_image_choice"
                    android:scaleType="centerCrop"
                    android:src="@drawable/green" />

                <TextView
                    android:id="@+id/choice_great"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_small"
                    android:textColor="@android:color/black"
                    android:text="choice"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>