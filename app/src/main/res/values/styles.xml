<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Form_font_profile">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Form_font_profile.font_small">
        <item name="android:textSize">@dimen/size_text_small</item>
    </style>

    <style name="Form_font_profile.font_medium">
        <item name="android:textSize">@dimen/size_text_medium</item>
    </style>

    <style name="SpaceBody">
        <item name="android:layout_marginTop">@dimen/margin_top_twenty</item>
        <item name="android:padding">@dimen/padding_sixteen</item>
    </style>

    <style name="SpaceBody.marginTop_Twenty">
        <item name="android:layout_marginTop">@dimen/margin_top_twenty</item>
    </style>

    <style name="SpaceBody.padding_sixteen">
        <item name="android:padding">@dimen/padding_sixteen</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/text_link_highlight</item>
        <item name="colorControlActivated">@color/text_link</item>
    </style>

    <style name="AppTheme.TransNav" parent="AppTheme"/>

</resources>
