<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <TextView
        android:id="@+id/form_id_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1719900291278"
        android:layout_weight="1"
        style="@style/Form_font_profile.font_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/form_firstname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="chanothai"
            android:layout_weight="1"
            style="@style/Form_font_profile.font_small"/>

        <TextView
            android:text="Duangrahva"
            android:id="@+id/form_lastname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Form_font_profile.font_small"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/form_birth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Form_font_profile.font_small"/>

        <TextView
            android:id="@+id/form_religion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Form_font_profile.font_small"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/form_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Form_font_profile.font_small"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/form_issued"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                style="@style/Form_font_profile.font_small"/>

            <TextView
                android:id="@+id/form_expired"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Form_font_profile.font_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ISSUED"
                style="@style/Form_font_profile.font_small"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="EXPIRED"
                style="@style/Form_font_profile.font_small"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>